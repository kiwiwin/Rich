<project>
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Rich.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="RichCommand.RichMain"/>
            </manifest>
        </jar>
    </target>

    <target name="rich">
        <java jar="build/jar/Rich.jar" fork="true"/>
    </target>

    <target name="test">
    </target>

</project>